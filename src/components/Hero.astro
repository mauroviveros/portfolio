---
import GithubIcon from "./icons/GithubIcon.astro";
import LinkedIn from "./icons/LinkedIn.astro";
---

<section class="flex flex-col-reverse md:flex-row items-center justify-center md:justify-between min-h-screen gap-4">
    <hgroup class="flex flex-col gap-2 text-center md:text-left">
        <h1 class="text-4xl md:text-6xl font-bold text-slate-800">¡Hola! ✌️</h1>
        <h2 class="text-4xl md:text-6xl font-bold text-slate-800">Soy <span class="text-primary">Mauro Viveros</span></h2>
        <p class="text-xl md:text-3xl font-bold text-slate-700">Desarrollador WEB | DEV-OPS</p>

        <article class="flex justify-center md:justify-normal items-center gap-4">
            <button class="relative text-slate-100 bg-primary py-3 px-4 rounded-lg font-semibold shadow duration-300 hover:shadow-xl hover:-translate-y-1">Descargar CV</button>

            <a href="https://github.com/mauroviveros" class="duration-500 text-slate-800 hover:text-primary">
                <GithubIcon/>
            </a>
            <a href="https://github.com/mauroviveros" class="duration-500 text-slate-800 hover:text-primary">
                <LinkedIn/>
            </a>
        </article>
    </hgroup>
    
    <img
        class="border-primary border-4 w-64 h-64 md:w-[28rem] md:h-[26rem]"
        style="box-shadow: 0 15px 25px #0000004d; border-radius: 63% 37% 48% 52% / 60% 57% 43% 40%;"
        src="https://avatars.githubusercontent.com/u/44076914?v=4"
        alt="Mauro Daniel Viveros Desarrollador WEB"
    >
</section>


