---
import { Section } from '@components';
import { useTranslations } from '@i18n';
import { Icon } from 'astro-icon/components';

const t = useTranslations(Astro.currentLocale);
const email = 'maurod.viveros@gmail.com';
---

<Section title={t('section.contact')} icon="tabler:mail-forward">
  <p
    class="text-foreground-light mx-auto my-10 max-w-lg text-center text-2xl font-medium text-pretty"
  >
    {t('contact.invitation')}
  </p>

  <article class="mx-auto flex max-w-sm justify-center gap-2">
    <span
      class="flex-1 truncate rounded-lg border border-zinc-800 bg-zinc-300 p-2 text-zinc-800 dark:border-zinc-300 dark:bg-zinc-800 dark:text-zinc-300"
    >
      {email}
    </span>

    <a
      href={`mailto:${email}`}
      aria-label={t('label.send_email', { email })}
      class="btn bg-primary text-background-hover rounded-lg"
    >
      <Icon name="tabler:send" size="1.5rem" />
    </a>

    <button
      type="button"
      aria-label={t('label.copy_email', { email })}
      class="btn bg-primary text-background-hover rounded-lg"
    >
      <Icon name="tabler:copy" size="1.5rem" />
    </button>
  </article>
</Section>
