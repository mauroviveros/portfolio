---
import { Networks, Section } from '@components';
import image from '@assets/hero.webp';
import { Picture } from 'astro:assets';
import { locales, useTranslations } from '@i18n';
import { USER } from '@constants';

const { role } = USER;
const t = useTranslations(Astro.currentLocale);
const name = USER.getName();
---

<Section class="relative min-h-dvh pt-20">
  <article
    class="flex flex-col-reverse items-center justify-center gap-2 md:flex-row md:justify-around md:gap-8"
  >
    <hgroup class="flex flex-col gap-3 text-center md:text-left">
      <h1 class="text-3xl font-bold md:text-6xl">
        <p>{t('hero.greetings')}</p>
        <p set:html={t('hero.identity', { name })} />
      </h1>

      <p class="text-foreground-light text-xl font-bold text-balance md:text-3xl">
        {role[Astro.currentLocale || locales[0].code]}
      </p>

      <div class="flex flex-wrap-reverse items-center justify-center gap-4 md:justify-normal">
        <a
          href={USER.cv_url[Astro.currentLocale || locales[0].code]}
          target="_blank"
          rel="noopener noreferrer"
          aria-label={t('label.download_cv', { name })}
          class="btn bg-primary text-background rounded-lg font-medium"
        >
          {t('btn.download_cv')}
        </a>
        <Networks />
      </div>
    </hgroup>

    <Picture
      src={image}
      width={400}
      height={400}
      alt={t('hero.picture_alt', { name })}
      class="border-primary ms:w-60 w-44 border-4 object-cover md:w-76 lg:w-[25rem]"
      style="border-radius: 63% 37% 48% 52% / 60% 57% 43% 40%;"
      fetchpriority="high"
      loading="eager"
      decoding="async"
    />
  </article>
</Section>
