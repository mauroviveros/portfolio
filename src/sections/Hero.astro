---
import { Picture } from "astro:assets";
import image from "../assets/mviveros-july.webp"; // Image is 1600x900
import Networks from "@components/Networks.astro";
---

<section class="flex flex-col-reverse md:flex-row items-center justify-center md:justify-between h-dvh py-16 gap-4 md:gap-8">
    <hgroup class="flex flex-col gap-3 text-center md:text-left">
        <h1 class="text-3xl md:text-6xl font-bold text-slate-800 dark:text-slate-200">¡Hola! ✌️</h1>
        <h2 class="text-3xl md:text-6xl font-bold text-slate-800 dark:text-slate-200">Soy <span class="text-primary">Mauro Viveros</span></h2>
        <p class="text-xl md:text-3xl font-bold text-slate-700 dark:text-slate-100">Desarrollador WEB | DEV-OPS</p>
        <article class="flex justify-center md:justify-normal items-center flex-wrap-reverse gap-4">
            <a
                href="https://drive.google.com/file/d/1VcraKv9SzyZbt4AdjD0nrj4b5g8gS8LI/view?usp=sharing"
                target="_blank"
                aria-label="Descargar mi curriculum profesional"
                class="btn rounded-lg bg-primary text-slate-100 dark:text-slate-800"
            >
                Descargar CV
            </a>

            <Networks/>
        </article>
    </hgroup>

    <Picture
        src={image}
        width={400} height={400}
        alt="Mauro Daniel Viveros Desarrollador WEB"
        class="object-cover border-primary border-4 size-48 ms:size-64 md:size-80 lg:size-[26rem]"
        style="border-radius: 63% 37% 48% 52% / 60% 57% 43% 40%;"
        loading="eager"
    />
</section>